<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<!--suppress JavaFxUnresolvedFxIdReference -->
<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@stylesheet.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.bluelhf.calculator.Controller">
   <Label fx:id="title" alignment="BOTTOM_LEFT" minHeight="50.0" text="Calculator" AnchorPane.leftAnchor="10.0"/>
   <VBox layoutX="10.0" layoutY="50.0">
      <Label fx:id="input" prefWidth="600.0"/>
      <GridPane prefHeight="290.0" prefWidth="600.0" styleClass="buttonGrid">
         <columnConstraints>
            <ColumnConstraints/>
            <ColumnConstraints/>
            <ColumnConstraints/>
            <ColumnConstraints/>
         </columnConstraints>
         <rowConstraints>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints/>
         </rowConstraints>
         <VBox.margin>
            <Insets bottom="10.0" right="10.0" top="10.0"/>
         </VBox.margin>
         <Button onAction="#onButton" text="("  GridPane.columnIndex="0" GridPane.rowIndex="0"/>
         <Button onAction="#onButton" text=")"  GridPane.columnIndex="1" GridPane.rowIndex="0"/>
         <Button onAction="#onButton" text="^"  GridPane.columnIndex="2" GridPane.rowIndex="0"/>
         <Button onAction="#onButton" text="AC" GridPane.columnIndex="3" GridPane.rowIndex="0"/>
         <Button onAction="#onButton" text="7"  GridPane.columnIndex="0" GridPane.rowIndex="1"/>
         <Button onAction="#onButton" text="8"  GridPane.columnIndex="1" GridPane.rowIndex="1"/>
         <Button onAction="#onButton" text="9"  GridPane.columnIndex="2" GridPane.rowIndex="1"/>
         <Button onAction="#onButton" text="/"  GridPane.columnIndex="3" GridPane.rowIndex="1"/>
         <Button onAction="#onButton" text="4"  GridPane.columnIndex="0" GridPane.rowIndex="2"/>
         <Button onAction="#onButton" text="5"  GridPane.columnIndex="1" GridPane.rowIndex="2"/>
         <Button onAction="#onButton" text="6"  GridPane.columnIndex="2" GridPane.rowIndex="2"/>
         <Button onAction="#onButton" text="1"  GridPane.columnIndex="0" GridPane.rowIndex="3"/>
         <Button onAction="#onButton" text="2"  GridPane.columnIndex="1" GridPane.rowIndex="3"/>
         <Button onAction="#onButton" text="3"  GridPane.columnIndex="2" GridPane.rowIndex="3"/>
         <Button onAction="#onButton" text="0"  GridPane.columnIndex="0" GridPane.rowIndex="4"/>
         <Button onAction="#onButton" text="."  GridPane.columnIndex="1" GridPane.rowIndex="4"/>

         <Button onAction="#onButton" text="="  GridPane.columnIndex="2" GridPane.rowIndex="4" fx:id="answerButton" defaultButton="true"/>

         <Button onAction="#onButton" text="*"  GridPane.columnIndex="3" GridPane.rowIndex="2"/>
         <Button onAction="#onButton" text="-"  GridPane.columnIndex="3" GridPane.rowIndex="3"/>
         <Button onAction="#onButton" text="+"  GridPane.columnIndex="3" GridPane.rowIndex="4"/>
      </GridPane>
   </VBox>
</AnchorPane>
